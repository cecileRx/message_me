<div class="column">
  <%= form_with(model: @user, class: "ui form", local: true) do |form| %>
    <div class="field">
       <%= form.label :username, "Username:" %>
      <div class="ui left icon input">
          <%= form.text_field :username %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= form.label :password, "Password:" %>
      <div class="ui left icon input">
        <%= form.text_field :password%>
        <i class="lock icon"></i>
      </div>
    </div>
     <%= form.submit "Sign up", class:"ui green button submit" %>
  <% end %>
</div>

